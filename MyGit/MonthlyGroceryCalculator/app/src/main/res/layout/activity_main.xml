<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.edenasbeza.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="cursive"
            android:paddingTop="90dp"
            android:text="Monthly Budget calculator"
            android:textAlignment="center"
            android:textColor="@color/colorsub"
            android:textSize="60dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:fadingEdge="horizontal|vertical"
        android:fadingEdgeLength="@android:dimen/app_icon_size"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/edit_view"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?selectableItemBackground"
            android:outlineProvider="paddedBounds"

            app:srcCompat="@drawable/calc" />

        <ImageView
            android:id="@+id/read_view"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:outlineProvider="paddedBounds"

            app:srcCompat="@drawable/file"
            android:foreground="?selectableItemBackground"
   />


    </LinearLayout>


</LinearLayout>

